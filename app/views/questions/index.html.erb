<h1>Questions#index</h1>
<p>Total: <% @question.size %></p>
<p><%= link_to 'New Question', new_questions_path %></p>
<table border="1">
  <tr>
    <th>Text</th>
    <th>Choices</th>
    <th colspan="3">Opciones</th>
  </tr>
  <% @question.each do |question| %>
      <tr>
        <td><%= question.text %></td>
        <td>
          <ul>
            <% question.choices.each do |choice| %>
                <li>
                  <%= choice.text %>
                  <% if choice.correct %>(Correct)<% end %>
                </li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_questions_path(question) %> </td>
        <td><%= link_to 'Destroy', question, :confirm => 'Â¿Estas seguro?', :method => :delete %> </td>
      </tr>
  <% end %>
</table>
<% content_for( :title) do %>
    All questions
<% end %>

